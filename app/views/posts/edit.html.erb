<div class="container">
  <%= form_with url: "/posts/#{@post.id}", model: @post, method: :put do |form| %>
    <div class="grid grid-cols-2 my-4">
      <p class="text-[30px] font-[600] text-[#924294]">EDIT POST</p>
      <div class="flex justify-end items-center gap-x-2">
        <a href="/posts/<%= @post.id %>" class="inline-flex items-center gap-x-2 text-white bg-[#FF0040] font-[600] text-[14px] px-[25px] py-[6px] rounded-[1000px] ">
          <svg width="9" height="10" viewBox="0 0 9 10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M8.60156 8.14844C8.95703 8.47656 8.95703 9.05078 8.60156 9.37891C8.4375 9.54297 8.21875 9.625 8 9.625C7.75391 9.625 7.53516 9.54297 7.37109 9.37891L4.5 6.50781L1.60156 9.37891C1.4375 9.54297 1.21875 9.625 1 9.625C0.753906 9.625 0.535156 9.54297 0.371094 9.37891C0.015625 9.05078 0.015625 8.47656 0.371094 8.14844L3.24219 5.25L0.371094 2.37891C0.015625 2.05078 0.015625 1.47656 0.371094 1.14844C0.699219 0.792969 1.27344 0.792969 1.60156 1.14844L4.5 4.01953L7.37109 1.14844C7.69922 0.792969 8.27344 0.792969 8.60156 1.14844C8.95703 1.47656 8.95703 2.05078 8.60156 2.37891L5.73047 5.27734L8.60156 8.14844Z" fill="white"/>
          </svg>
          Cancel
        </a>
        <%= form.button class: 'inline-flex items-center gap-x-2 text-white bg-[#924294] font-[600] text-[14px] px-[25px] py-[6px] rounded-[1000px]' do %>
          <svg width="13" height="13" viewBox="0 0 13 13" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12.2148 2.80469C12.4336 3.02344 12.625 3.43359 12.625 3.73438V10.625C12.625 11.6094 11.832 12.375 10.875 12.375H2.125C1.14062 12.375 0.375 11.6094 0.375 10.625V1.875C0.375 0.917969 1.14062 0.125 2.125 0.125H9.01562C9.31641 0.125 9.72656 0.316406 9.91797 0.507812L12.2148 2.80469ZM6.5 10.625C7.45703 10.625 8.25 9.85938 8.25 8.875C8.25 7.91797 7.45703 7.125 6.5 7.125C5.51562 7.125 4.75 7.91797 4.75 8.875C4.75 9.85938 5.51562 10.625 6.5 10.625ZM9.125 4.9375V2.3125C9.125 2.09375 8.90625 1.875 8.6875 1.875H2.5625C2.31641 1.875 2.125 2.09375 2.125 2.3125V4.9375C2.125 5.18359 2.31641 5.375 2.5625 5.375H8.6875C8.90625 5.375 9.125 5.18359 9.125 4.9375Z" fill="white"/>
          </svg>
          Save
        <% end%>
      </div>
    </div>
    <div class="grid grid-cols-2 gap-x-7">
      <div class="col-span-2 mb-6">
        <%= form.label :content, "Content", class: 'text-[12px] font-[400] text-[#767F84]' %>
        <div class="mt-1">
          <%= form.text_field :content, class: 'block w-full border-[1px] border-[#D9D9D9] rounded-[5px] p-[10px] focus:ring-[#924294] focus:border-[#924294]' %>
        </div>
      </div>
      <div class="col-span-1">
        <%= form.label :source, "Social Media", class: 'text-[12px] font-[400] text-[#767F84]' %>
        <div class="mt-1">
          <%= form.select :source, Post.sources.keys.map { |key| [key.titleize, key] }, { prompt: 'Select' }, { id: 'source', class: 'block w-full border-[1px] border-[#D9D9D9] rounded-[5px] p-[10px] focus:ring-[#924294] focus:border-[#924294]' }%>
        </div>
      </div>
      <div class="col-span-1">
        <label for="content" class="text-[12px] font-[400] text-[#767F84]">Start Date</label>
        <div class="relative">
          <div class="absolute inset-y-0 right-0 flex items-center pr-3.5 pointer-events-none">
            <svg width="13" height="15" viewBox="0 0 13 15" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M4.90625 2.5H8.84375V1.40625C8.84375 1.05078 9.11719 0.75 9.5 0.75C9.85547 0.75 10.1562 1.05078 10.1562 1.40625V2.5H11.25C12.207 2.5 13 3.29297 13 4.25V13C13 13.9844 12.207 14.75 11.25 14.75H2.5C1.51562 14.75 0.75 13.9844 0.75 13V4.25C0.75 3.29297 1.51562 2.5 2.5 2.5H3.59375V1.40625C3.59375 1.05078 3.86719 0.75 4.25 0.75C4.60547 0.75 4.90625 1.05078 4.90625 1.40625V2.5ZM2.0625 13C2.0625 13.2461 2.25391 13.4375 2.5 13.4375H11.25C11.4688 13.4375 11.6875 13.2461 11.6875 13V6H2.0625V13Z" fill="#767F84"/>
            </svg>
          </div>
          <input id="start-date" datepicker datepicker-autohide datepicker-buttons datepicker-format="dd/mm/yyyy" type="text" class="mt-1 block w-full border-[1px] border-[#D9D9D9] rounded-[5px] p-[10px] focus:ring-[#924294] focus:border-[#924294]" placeholder="DD/MM/YYYY" name="post[posted_at]" value="<%= @post.posted_at.strftime("%d/%m/%Y") %>">
        </div>
      </div>
    <% end %>
  </div>
</div>
